
<section class="hero py-16" >
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2 ml-36">
            <h6 class="text-lg"><em>Are you hungry?</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold">Don't wait !!</h1>
           <a href="#orderNow"> <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Order Now</button></a>
        </div>
        <div class="w-1/2">
            <img class="herop rotate"  src="/img/tiffin-service-man.jpg">
        </div>
    </div>
  </section>

  <section class="menu container mx-auto py-8">
        <h1 class="text-xl font-bold mb-8 ml-20">TIFFIN MENU</h1>
       <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-x-12 gap-y-16">

        <% pizzas.forEach(function(pizza){ %>
            <div id="orderNow"  class="w-full ml-20 md:w-64">
                <img class="h-40 mb-4 mx-auto rounded-lg" src="/img/<%=pizza.image%>" alt="">
    
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%=pizza.name%></h2>
                    <span class="small py-1 px-4 rounded-full uppercase text-xs"><%=pizza.size%></span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">Rs<%=pizza.price%></span>
                        <button data-pizza="<%=JSON.stringify(pizza)%>"   class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>

        <% })%>

       </div>
  </section>